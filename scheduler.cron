# Symlink this to /etc/cron.d
# Start the app
* * * * * pi ! ps aux | grep python | grep main.py | grep -v grep && sleep 120 && /usr/bin/python3 /home/pi/Escape-Room-Clock/main.py 
# Get automatic updates
0 4 * * * root cd /home/pi/Escape-Room-Clock/ && git stash && git clean -fd && git pull && for FILE in $(ls -1 | grep -v 'scheduler.cron\|logrotate.conf');do chown pi:pi $FILE;done && kill $(ps aux | grep python | grep main.py | grep -v grep | awk '{print $2}')
